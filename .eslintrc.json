{
  "files": [
    "**/*.{js,mjs,cjs,ts,jsx,tsx}"
  ],
  "languageOptions": {
    "globals": {
      "browser": true,
      "node": true
    }
  },
  "plugins": [
    "js"
  ],
  "extends": [
    "js/recommended"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-react": "off",
    "react/prop-types": 0,
    "indent": [
      "error",
      "tab"
    ],
    "linebreak-style": 0,
    "semi": [
      "error",
      "never"
    ]
  }
}